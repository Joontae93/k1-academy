{
	"name": "kingdom-one/kingdom-one-academy",
	"description": "a custom child theme of Pro",
	"type": "project",
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*",
				"wpackagist-theme/*"
			]
		}
	],
	"scripts": {
		"phpcs": "phpcs wp-content/themes/k1-academy-child/ --extensions=php --ignore=wp-content/themes/k1-academy-child/build/",
		"phpcbf": "phpcbf wp-content/themes/k1-academy-child/ --extensions=php --ignore=wp-content/themes/k1-academy-child/build/"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "*"
	}
}
